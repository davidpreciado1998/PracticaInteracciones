<Window x:Class="PracticaInteracciones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaInteracciones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBlock Canvas.Left="10" Canvas.Top="10" Width="63" FontSize="18" Text="Cuenta:"/>
        <Slider ValueChanged="sldPorcentajePropina_ValueChanged" Name="sldPorcentajePropina" Canvas.Left="10" Canvas.Top="104" Width="397" />
        <TextBox Name="txtCuenta" Height="29" Canvas.Left="10" TextWrapping="Wrap" Text="100" Canvas.Top="49" Width="397" FontSize="18"/>
        <TextBlock Height="27" Canvas.Left="10" TextWrapping="Wrap" Text="Total con propina:" Canvas.Top="127" Width="163" FontSize="18"/>
        <TextBlock Name="lblTotalConPropina" Height="25" Canvas.Left="10" TextWrapping="Wrap" Text="$0.00" Canvas.Top="159" Width="149" FontSize="18"/>
        <TextBlock Name="lblPorcentajePropina"  Height="25" Canvas.Left="424" TextWrapping="Wrap" Text="0%" Canvas.Top="104" Width="52" FontSize="18"/>
    </Canvas>
</Window>
